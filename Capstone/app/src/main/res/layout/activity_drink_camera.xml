<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DrinkCamera">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:background="#87CEFA"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_arrow_white_24" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="음성 검색 테스트"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="72.5dp"
        android:src="@drawable/test1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="버튼 눌러서 테스트 하기"
            android:textAlignment="center"
            android:textColor="#0054FF"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/VoiceTest"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_background"
            android:text="음성 인식"
            android:textColor="#1E90FF"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/result"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:text="음성 인식 결과"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            />

        <Button
            android:id="@+id/ServerTest"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_background"
            android:text="음성 텍스트 서버로 보내기"
            android:textColor="#1E90FF"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>